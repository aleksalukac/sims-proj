        <Button x:Name="login_Copy2" Content="Reset password" HorizontalAlignment="Left" Height="48" Margin="234,508,0,0" VerticalAlignment="Top" Width="192" Grid.Column="1" Click="login_Copy3_Click"/>
        <Button x:Name="login_Copy3" Content="FAQ" HorizontalAlignment="Left" Height="48" Margin="81,596,0,0" VerticalAlignment="Top" Width="127" Grid.Column="1"/>
        <Button x:Name="login_Copy4" Content="Prijavi problem" HorizontalAlignment="Left" Height="48" Margin="234,596,0,0" VerticalAlignment="Top" Width="192" Grid.Column="1" Click="login_Copy2_Click"/>
    </Grid>
</Window>

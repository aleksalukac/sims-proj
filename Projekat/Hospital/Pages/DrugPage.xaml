<Page x:Class="Hospital.Pages.DrugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrugPage">

    <Grid>
        <DataGrid x:Name="dataGrid" MouseDoubleClick="Row_MouseDoubleClick_Drugs" HorizontalAlignment="Left" Height="230" CanUserDeleteRows="True" VerticalAlignment="Top" Width="391" Margin="27,84,0,0" SelectionChanged="dataGrid_SelectionChanged"/>
        <Label x:Name="label" Content="Lekovi" HorizontalAlignment="Left" Margin="49,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="136,48,0,0" TextChanged="searchBox_TextChanged"/>
        <Button x:Name="addDoctor" Content="Dodaj novi lek" HorizontalAlignment="Left" Height="22" Margin="280,332,0,0" VerticalAlignment="Top" Width="138" Click="addDrug_Click"/>
        <Frame x:Name="Drugframe" Content="" HorizontalAlignment="Left" Height="313" Margin="439,89,0,0" VerticalAlignment="Top" Width="332" NavigationUIVisibility="Hidden"/>

    </Grid>
</Page>

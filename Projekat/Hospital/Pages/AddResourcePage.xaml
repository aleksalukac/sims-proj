<Page x:Class="Hospital.Pages.AddResourcePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.Pages"
      mc:Ignorable="d" 
      
      FontSize="20"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddResourcePage">

    <Grid>
        <Button x:Name="button_Copy" Content="Sačuvaj izmene" HorizontalAlignment="Left" Margin="229,123,0,0" VerticalAlignment="Top" Width="142" Click="button_Copy_Click"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="28" Margin="229,32,0,0" VerticalAlignment="Top" Width="142"/>
        <Label x:Name="label" Content="Naziv resursa" HorizontalAlignment="Left" Margin="18,23,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="ID" HorizontalAlignment="Left" Margin="16,117,0,0" VerticalAlignment="Top"/>
        <Label x:Name="idLabel" Content="" HorizontalAlignment="Left" Margin="45,117,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Soba u koju se smešta" HorizontalAlignment="Left" Margin="18,74,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="roomsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" Margin="229,78,0,0" SelectionChanged="roomsComboBox_SelectionChanged"/>

    </Grid>
</Page>

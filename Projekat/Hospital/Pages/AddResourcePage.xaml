        <Label x:Name="label" Content="Naziv resursa" HorizontalAlignment="Left" Margin="17,14,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="ID:" HorizontalAlignment="Left" Margin="16,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="idLabel" Content="" HorizontalAlignment="Left" Margin="45,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Soba" HorizontalAlignment="Left" Margin="18,74,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="roomsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="85,78,0,0" SelectionChanged="roomsComboBox_SelectionChanged"/>

    </Grid>
</Page>
